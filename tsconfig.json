{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSources": true,
    "inlineSourceMap": true,
    "module": "ESNext",
    "target": "ES6",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}